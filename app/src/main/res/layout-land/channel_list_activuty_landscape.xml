<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment class="gweltaz.calori.channelmessaging.fragments.ChannelListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/listchannel_fragment"
        tools:layout="@layout/fragment_channel_list"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    </fragment>
    <fragment class="gweltaz.calori.channelmessaging.fragments.MessageFragment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/message_fragment"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_message"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    </fragment>
</LinearLayout>