<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@color/backgroundcolor"
    android:id="@+id/loginMainLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="gweltaz.calori.channelmessaging.LoginActivity">



        <ImageView
            android:id="@+id/mIvLogo"
            android:src="@drawable/channel_messaging_logo"
            android:layout_width="130dp"
            android:layout_margin="20dp"
            android:layout_height="130dp" />
        <LinearLayout

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identifiant"
                android:layout_marginRight="10dp"
                android:id="@+id/textViewidentifiant" />-->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/TextLabel"
                android:layout_margin="16dp">

                <EditText

                    android:id="@+id/editTextIdentifiant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:hint="Login" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!--<TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginRight="10dp"
                android:id="@+id/textViewpassword" />-->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/TextLabel"
                android:layout_margin="16dp">

                <EditText

                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"

                    android:hint="Password" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            >

            <RelativeLayout

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button

                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valider"
                    android:id="@+id/button_valider"
                    android:layout_gravity="right" />
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi"
                    android:layout_centerHorizontal="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:indicatorName="BallScaleMultipleIndicator"
                    />
            </RelativeLayout>

        </LinearLayout>


    <Button
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map APi"
        android:id="@+id/mapsButton"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/messageLogin"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="Bienvenue !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/messageLoginToMove"
        android:padding="9dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="Connectez vous pour accéder à l'application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

</LinearLayout>
