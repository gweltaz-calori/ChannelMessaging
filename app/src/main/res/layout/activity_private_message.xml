<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gweltaz.calori.channelmessaging.activity.ChannelActivity">





    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listviewprivatemessages"
        android:layout_above="@+id/relativeLayout" />



    <RelativeLayout
        android:layout_weight=".30"

        android:layout_width="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/privatemessageinput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Message"
            android:layout_toStartOf="@+id/sendprivatemessage"
            android:layout_toLeftOf="@+id/sendprivatemessage" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_send"
            android:id="@+id/sendprivatemessage"
            />

    </RelativeLayout>


</RelativeLayout>
