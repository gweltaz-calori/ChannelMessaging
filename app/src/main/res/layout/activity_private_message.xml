<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/private_activity_message"
    tools:context="gweltaz.calori.channelmessaging.activity.ChannelActivity">





    <ListView

        android:layout_weight=".70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listviewprivatemessages"
        android:layout_above="@+id/relativeLayout" />



    <RelativeLayout
        android:layout_weight=".30"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:gravity="center_vertical"


        android:id="@+id/relativeLayout"
        android:layout_alignParentEnd="false">


        <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/privatemessageinput"

                android:hint="Message"

            android:layout_toLeftOf="@+id/rightbuttons"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:id="@+id/rightbuttons"

    android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:layout_marginRight="10dp"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:id="@+id/sendprivatemessage"
        />

</LinearLayout>





    </RelativeLayout>


</RelativeLayout>
